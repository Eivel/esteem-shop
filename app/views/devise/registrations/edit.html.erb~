<h2>Ustawienia konta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Twój email nie został potwierdzony: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: 'Hasło', autocomplete: "off", hint: "pozostaw puste, jeśli nie chcesz zmienić hasła", required: false %>
    <%= f.input :password_confirmation, label: 'Potwierdź hasło', required: false %>
    <%= f.input :current_password, label: 'Obecne hasło', hint: "podaj obecne hasło w celu potwierdzenia żądania", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zmień" %>
  </div>
<% end %>

<%= link_to "Wróć", :back %>
