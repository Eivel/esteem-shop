<h2>Rejestracja</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, label: 'Hasło', required: true, hint: ("#{@minimum_password_length} znaków minimum" if @validatable) %>
    <%= f.input :password_confirmation, label: 'Potwierdź hasło', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zarejestruj się" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
